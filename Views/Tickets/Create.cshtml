            <label asp-for="First" class="form-label">Първо число</label>
            <select asp-for="First" class="form-control">
                @for (int i = 1; i < 50; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="First" class="text-danger"></span>



            <label asp-for="Second" class="form-label">Второ число</label>
            <select asp-for="Second" class="form-control">
                @for (int i = 1; i < 50; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Second" class="text-danger"></span>



            <label asp-for="Third" class="form-label">Трето число</label>
            <select asp-for="Third" class="form-control">
                @for (int i = 1; i < 50; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Third" class="text-danger"></span>



            <label asp-for="Fourth" class="form-label">Четвърто число</label>
