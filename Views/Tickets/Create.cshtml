            <span asp-validation-for="Sixth" class="text-danger"></span>


            <div class="mb-3 mt-3">
                <input class="btn btn-success" type="submit" value="Попълни" />
            </div>

        </form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }
